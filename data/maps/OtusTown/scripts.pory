script StopFromGoingTo_R1 {
    lockall
    msgbox("MOM said that going out of town is\ndangerous!")
    waitmessage
    applymovement(OBJ_EVENT_ID_PLAYER, StopPlayer_R1)
    waitmovement(0)
    releaseall
}

movement StopPlayer_R1 {
    walk_up
}

movement RivalWalk_1 {
    walk_left * 7
}

movement RivalWalk_1_Back {
    walk_right * 8
}