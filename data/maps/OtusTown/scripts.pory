mapscripts OtusTown_MapScripts {
        MAP_SCRIPT_ON_FRAME_TABLE [
        VAR_RIVAL, 0: Rival_1
    ]
}

script Rival_1 {
    lockall
    applymovement(3, RivalWalk_1)
    waitmovement(0)
    msgbox("Hey there you are!\nCome over to my house\lI got some great news!")
    closemessage
    applymovement(3,RivalWalk_1_Back)
    waitmovement(0)
    setflag(FLAG_HIDE_OTUSTOWN_RIVAL)
    setvar(VAR_RIVAL, 1)
    removeobject(3)
    releaseall
    end
}

